<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Whitewashing\Core\User" table="users">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>

        <field name="name" type="string" column="user_name" unique="true" />
        <field name="email" type="string" column="user_email" unique="true" />
        <field name="password" type="string" column="user_password" />
        <field name="role" type="string" column="user_role" />
    </entity>

</doctrine-mapping>
