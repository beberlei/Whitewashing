{% extends 'WhitewashingBlogBundle::layout.twig.html' %}

{% block content %}
<h2>Search result for "{{term}}"</h2>

<p>Found <strong>{{result.resultCount}}</strong> results in <strong>{{result.queryTime}}</strong> seconds.</p>

<ol>
{% for resDoc in result.documents %}
    <li>
        <strong><a href="{{ path('blog_show_post', {'id': resDoc.document.id}) }}">{{ resDoc.document.headline }}</a></strong>
        ({{ resDoc.score * 100 }})
    </li>
{% endfor %}
</ol>
{% endblock %}